<% if flash[:notice] %> 
  <div class='alert alert-success'>
    <button type="button" class="close" data-dismiss="alert">×</button>
    <%= flash[:notice] %>
  </div>
<% elsif flash[:error] %>
  <div class='alert alert-error'>
    <button type="button" class="close" data-dismiss="alert">×</button>
    <%= flash[:error] %>
  </div>
<% end %>

<div class="hero-unit">
  <h1>Gitbo</h1>
  <h3>Get paid to fix the most asked for Github issues</h3>

  <div class="row">
    <div class="span3">
      <div id="themeIcon1" class='help'>
        <%= link_to image_tag("help.png"), issues_path %>
      </div>
      <div class="step_writeup">
        <h2 class="webfront">Request an Issue Patch</h2>
        <p> Need a pressing feature resolved? List it here.</p>
      </div>
    </div>
    <div class="span3">
      <div id="themeIcon1" class='help'>
        <%= link_to image_tag("glass.png"), issues_path %>
      </div>
      <div class="step_writeup">
        <h2 class="webfront">Explore & Fix Issues</h2>
        <p> Find the most pressing open source issues </p>
      </div>
    </div>
    <div class="span3">
      <div id="themeIcon1">
        <%= link_to image_tag("money.png"), issues_path %>
      </div>
      <div class="step_writeup">
        <h2 class="webfront">Earn Money</h2>
        <p> Help resolve issues and make money and street cred </p>
      </div>
    </div>
  </div>
</div> <!-- end class hero unit -->

