<%# if @repos.first %>
  
  <div class="span12">
    <h3 class="pull-right"><a class="btn btn-info btn-small" href="http://www.github.com/<%= @repos.first.owner_name %>" target="blank">View owner on <i class='icon-github'></i></a></h3>
    </div>
</div>

<div class="row">

  <div class="span3">
    <div class="vcard">
      <img src="<%= @user.image %>" class='comment-avatar'>
      <h1>
        <span><%= @user.name %></span>
        <em><%= @user.nickname %></em>
      </h1>
    </div>

  </div>
  
  <div class="span9">
    <ul id="myTab" class="nav nav-tabs">
      <li><a href="#user-repos" data-toggle="tab">Your repos</a>
      </li>
      <li class="active"><a href="#user-bounties" data-toggle="tab">Your bounties</a></li>
      <li><a href="#following" data-toggle="tab">Following</a></li>
      <li><a href="#starred" data-toggle="tab">Starred</a></li>
      <li><a href="#add-your-repos" data-toggle="tab">Upload your repos</a></li>
    </ul>

    <div class="tab-content">
      <div class="tab-pane" id="user-repos"><%= render 'user-repos' %></div>
      <div class="tab-pane active" id="user-bounties"><%= render 'user-bounties' %></div>
      
      <div class="tab-pane" id="following"><%= render 'following' %></div>
      <div class="tab-pane" id="starred"><%= render 'starred' %></div>
      <div class="tab-pane" id="add-your-repos"><%= render 'add-your-repos' %></div>
    </div>
  </div>
</div>
<%# end %>


