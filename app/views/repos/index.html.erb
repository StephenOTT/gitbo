
<div class='jumbotron'>
 <p id="notice text-success"><%= notice %></p> 
   <h1>Gitbo</h1>
   <p class='lead'>Get paid to fix the most asked for Github issues</p> 
</div>

<h3>Listing repos</h3>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Popularity</th>
      <th>Open Issues</th>
      <th>Watchers</th>
      <th>Issues Comment Count</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

<% @repos.sort_by(&:popularity).reverse.each do |repo| %>
  <tr>
    <td><%= link_to repo.name, owner_repo_path(repo.owner_name, repo) %>
    <td><%= repo.popularity %></td>
    <td><%= repo.open_issues %></td>
    <td><%= repo.watchers %></td>
    <td><%= repo.issues_comment_count %>
    <td><%= link_to 'Show', owner_repo_path(repo.owner_name, repo), :class => 'btn btn-mini btn-success' %></td>
    <td><%= link_to 'Edit', edit_repo_path(repo), :class => 'btn btn-mini btn-primary' %></td>
    <td><%= link_to 'Destroy', repo, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-mini btn-danger' %></td>

  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Repo', new_repo_path, :class => 'btn btn-primary' %>
