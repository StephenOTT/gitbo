<p id="notice"><%= notice %></p>

<h1>Listing repos</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Open Issues</th>
    <th>Watchers</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @repos.each do |repo| %>
  <tr>
    <td><%= link_to repo.name, repo %>
    <td><%= repo.open_issues %>
    <td><%= repo.watchers %>
    <td><%= link_to 'Show', repo %></td>
    <td><%= link_to 'Edit', edit_repo_path(repo) %></td>
    <td><%= link_to 'Destroy', repo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

