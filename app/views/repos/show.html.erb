<p id="notice text-success"><%= notice %></p>

<div class="row">
    <h3><%= link_to @repo.owner_name, owner_repos_path %> / <%= @repo.name %></h3>
</div>

<div class="row">
  <div class='span2'>
    <h5>Watchers: <%= @repo.watchers %></h5>
    <h5>Open_issues: <%= @repo.open_issues %></h5>
    <% if @repo.description %>
      <h5>Description:</h5> <%= @repo.description %>
    <% end %>



  </div>
    <div class='span7'>
      <table class="table table-bordered">
        <tr>
          <th>All Open Issues</th>
          <th>Issue Git number: </th>
        </tr>
        <% @repo.issues.each do |issue| %>
          <tr>
            <td><%= link_to issue.title, owner_repo_gitnumber_path(@repo.owner_name, @repo.name, issue.git_number) %></td>
            <td><%= issue.git_number %></td>
          </tr>
        <% end %>
      </table>
    </div>
</div>

