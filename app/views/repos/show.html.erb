<p id="notice"><%= notice %></p>

<p>
  <b>Repo Name:</b>
  <%= @repo.name %>
</p>
<p>
  <b>Owner Name:</b>
  <%= @repo.owner_name %>
</p>
<p>
  <b>Description:</b>
  <%= @repo.description %>
</p>
<p>
  <b>Watchers:</b>
  <%= @repo.watchers %>
</p>
<p>
  <b>Open_issues:</b>
  <%= @repo.open_issues %>
</p>

<table>

  <b>All Open Issues / Issue Git number: </b>
  <% @repo.issues.each do |issue| %>
    <tr>
      <td><%= link_to issue.title, "/repos/#{@repo.owner_name}/issues/#{issue.id}" %></td>
      <td><%= issue.git_number %></td>
    </tr>
  <% end %>

</table><br />



<%#= link_to 'Edit', edit_repo_path(@repo) %>
<%= link_to 'Back', repos_path %>
