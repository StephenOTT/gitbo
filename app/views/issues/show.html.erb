<p id="notice"><%= notice %></p>


<div class="row">
  <div class ='span8'>
    <h3>Issue: <%= @issue.title %></h3>
    <h3>For Repo: <%= link_to @issue.repo.name, owner_repo_path(@issue.repo.owner_name, @issue.repo.name) %></h3>
  </div>
  <div class="span4">
    <h3 class="pull-right"><a class="btn btn-info btn-small" href="http://www.github.com/<%= @issue.repo.owner_name %>/<%= @issue.repo.name %>/issues/<%= @issue.git_number %>" target="blank">View Issue on Github</a></h3>
  </div>
</div>
<div class="row">
  <div class='span2'>
    <h4>Git Number: <%= @issue.git_number %></h4>
  </div>
  <div class='span10'>
    <h3>Description</h3>
    <p><%= @issue.body.html_safe %></p>
  </div>
</div>

