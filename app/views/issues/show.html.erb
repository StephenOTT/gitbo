<p id="notice"><%= notice %></p>

<% if repo_owner %>
<!-- <input id="endorsement" name="endorsement" type="checkbox" value="1" /> -->
<%= link_to 'endorse?', owner_endorsement_path(@issue, :endorsement), :method => :put %>
<%= link_to 'Disapprove?', owner_endorsement_path(@issue, :disapproval), :method => :put %>
<!-- <label for="endorsement">Endorse?</label> -->
<!-- <input id="disapproval" name="disapproval" type="checkbox" value="1" /> -->
<!-- <label for="disapproval">Disapprove?</label>
<input type="submit" value="Submit"> -->
<% end %>

<div class="row">
  <div class ='span8'>
    <h3>Issue: <%= @issue.title %></h3>
    <h3>For Repo: <%= link_to @issue.repo.name, owner_repo_path(@issue.repo.owner_name, @issue.repo.name) %></h3>
  </div>
  <div class="span4">
    <h3 class="pull-right"><a class="btn btn-info btn-small" href="http://www.github.com/<%= @issue.repo.owner_name %>/<%= @issue.repo.name %>/issues/<%= @issue.git_number %>" target="blank">View Issue on Github</a></h3>
  </div>
</div>
<div class="row">
  <div class='span2'>
    <h4>Git Number: <%= @issue.git_number %></h4>
  </div>
  <div class='span10'>
    <div class='row'>
      <h3>Description</h3>
      <p><%= @issue.body.html_safe %></p>
    </div>

      <% @issue.comments.each do |comment| %>
    <div class='row'>
        <div class='comment-container'>
          <img src="<%= comment.owner_image %>" class='comment-avatar'>
          <div class='comment-content bubble'>
            <div class='content-container-inner'>
              <div class='comment-header'>
                <div class='comment-author'>
                  <p><%= comment.owner_name %></p>
                </div>
                <div class='pull-right header-date'>
                  <time><%= comment.git_update_at %></time>
                </div>
              </div>
              <div class='comment-content'>
                <p><%= comment.body %></p>
              </div>
            </div>
          </div>
        </div>
    </div>
      <% end %>
  </div>
</div>


