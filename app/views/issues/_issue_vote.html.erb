<div class="user_vote_table">
  <% if current_user %>
    <td>
      <%= link_to vote_issue_path(issue.id, :upvote), :method => :put, remote: true do %>
            <i class="icon-arrow-up"></i>
      <% end %><br />
      <%= link_to vote_issue_path(issue.id, :downvote), :method => :put, remote: true do %>
          <i class="icon-arrow-down"></i>
      <% end %>
    </td>
  <% else %>
      <td id="vote-prompt" href="#login-prompt" data-toggle="modal"><i class="icon-arrow-up"></i><br />
      <i class="icon-arrow-down"></i></td>
  <% end %>
</div>