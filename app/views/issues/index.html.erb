<div class='page_head'>
    <h1>Listing issues</h1>
</div>

<table class="table table-hover">
    <thead>
      <tr>
        <th></th>
        <th></th>
        <th>Issue Name</th>
        <th>Repo Name</th>
        <th>Issue Number</th>
        <th>Comment Count</th>
        <th>Popularity</th>
        <th>Upvote</th>
        <th>Downvote</th>
      </tr>
    </thead>

<% @issues.sort_by(&:popularity).reverse.each do |issue| %>
  <tr>
    <td><%= link_to "Upvote", upvote_issue_path(issue), :method => :put %></td>
    <td><%= link_to "Downvote", downvote_issue_path(issue), :method => :put %></td>
    <td><%= link_to issue.title, repo_issues_path(issue.repo.owner_name, issue.repo.name) %></td>
    <td><%= link_to issue.repo.name, issue.repo %></td>
    <td><%= issue.git_number %></td>
    <td><%= issue.comment_count %></td>
    <td><%= issue.popularity %></td>
    <td><%= issue.upvote %></td>
    <td><%= issue.downvote %></td>
  </tr>
<% end %>
</table>

<br />