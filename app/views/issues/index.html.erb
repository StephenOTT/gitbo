<h1>Listing issues</h1>

<table>
  <tr>
    <th>Issue Name</th>
    <th>Issue Number</th>
    <th>Comment Count</th>
    <th>Popularity</th>
    <th>Upvote</th>
    <th>Downvote</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @issues.sort_by(&:popularity).reverse.each do |issue| %>
  <tr>
    <td><%= link_to issue.title, issue %></td>
    <td><%= issue.git_number %></td>
    <td><%= issue.comment_count %></td>
    <td><%= issue.popularity %></td>
    <td><%= issue.upvote %></td>
    <td><%= issue.downvote %></td>
    <td><%= link_to 'Edit', edit_issue_path(issue) %></td>
    <td><%= link_to 'Destroy', issue, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Issue', new_issue_path %>
