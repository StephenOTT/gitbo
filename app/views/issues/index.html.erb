<h1>Listing issues</h1>

<table>
  <tr>
    <th></th>
    <th></th>
    <th>Issue Name</th>
    <th>Repo Name</th>
    <th>Issue Number</th>
    <th>Comment Count</th>
    <th>Popularity</th>
    <th>Upvote</th>
    <th>Downvote</th>
    <th></th>
    <th></th>
  </tr>

<% @issues.sort_by(&:popularity).reverse.each do |issue| %>
  <tr>
    <td><%= link_to "Upvote", "/issues/#{issue.id}/upvote", :method => :put %></td>
    <td><%= link_to "Downvote", "/issues/#{issue.id}/downvote", :method => :put %></td>
    <td><%= link_to issue.title, repo_issue_path(issue.repo, issue) %></td>
    <td><%= link_to issue.repo.name, issue.repo %></td>
    <td><%= issue.git_number %></td>
    <td><%= issue.comment_count %></td>
    <td><%= issue.popularity %></td>
    <td><%= issue.upvote %></td>
    <td><%= issue.downvote %></td>
    <td><%#= link_to 'Destroy', repo_issue_path, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />