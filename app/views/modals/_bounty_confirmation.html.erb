<div id="bounty-confirmation" class="modal hide fade" tabindex="-1">

<% if @issue %>
  <%  submit_path = "/#{@issue.repo_owner}/#{@issue.repo_name}/issues/#{@issue.git_number}/bounty" %>
<% end %>

<%= form_tag(submit_path, :method => "post", remote: true, :id => "modal_bounty_form" ) do %>
<div class="modal-body">
  <div class="field">
    <label for="bounty_price">Please re-enter the amount you wish to pledge...</label>
    <input id="bounty_price" name="price" type="number" />
  </div>
  <div class="modal-footer">
    <span id="error"></span>
    <div class="actions">
      <button class="btn btn-success btn-small" id="create-bounty" name="commit" type="submit" />Pledge</button>
      <button class="btn btn-danger btn-small" id="nevermind" data-dismiss="modal" aria-hidden="true">Nevermind</button>
    </div>
  </div>
</div>
<% end %>