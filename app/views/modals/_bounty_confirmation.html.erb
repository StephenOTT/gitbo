<div id="bounty-confirmation" class="modal hide fade" tabindex="-1" data-backdrop="vote-prompter" data-keyboard="false">

<% if @issue %>
  <%  submit_path = "/#{@issue.repo.owner_name}/#{@issue.repo.name}/issues/#{@issue.git_number}/bounty" %>
<% end %>

<%= form_tag(submit_path, :method => "post", remote: true, :id => "modal_bounty_form" ) do %>
<div class="modal-body">
  <div class="field">
    <label for="bounty_price">Please re-enter the amount you wish to pledge...</label>
    <input id="bounty_price" name="price" type="number" />
  </div>
  <div class="modal-footer">
    <div class="actions">
      <input name="commit" type="submit" value="Create Bounty" method="post" />
      <button id="bounty" class="btn btn-success btn-small" href="#bounty-confirmation" data-toggle="modal" name="commit" value="Create Bounty" type="submit">Cancel</button>
    </div>
  </div>
</div>
<% end %>